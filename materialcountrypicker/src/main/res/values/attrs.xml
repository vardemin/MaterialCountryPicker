<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PhoneNumberEditText">
        <attr name="cp_defaultCountryName" format="string" />
        <attr name="cp_preferredCountries" format="string" />

        <attr name="cp_convertPlusTo" format="string"/>

        <!--bool-->
        <!--Auto detection takes preference True by default-->
        <attr name="cp_autoDetectCountry" format="boolean" />
        <attr name="cp_searchAllowed" format="boolean" />
        <attr name="cp_showFastScroll" format="boolean" />
        <attr name="cp_dialogKeyboardAutoPopup" format="boolean" />
        <attr name="cp_showFullScreeDialog" format="boolean" />

        <attr name="cp_allowedSymbols" format="string" />

        <attr name="cp_showCountryCodeInView" format="boolean" />
        <attr name="cp_showCountryCodeInList" format="boolean" />
        <attr name="cp_showCountryDialCodeInView" format="boolean" />
        <attr name="cp_showCountryDialCodeInList" format="boolean" />
        <attr name="cp_showCountryDropdownArrow" format="boolean" />
        <attr name="cp_rememberLastSelection" format="boolean" />
        <attr name="cp_setCountryCodeBorder" format="boolean" />

        <!--Dialog props-->
        <attr name="cp_fastScrollerBubbleColor" format="color" />
        <attr name="cp_fastScrollerHandleColor" format="color" />
        <attr name="cp_fastScrollerBubbleTextAppearance" format="reference" />

        <attr name="cp_listItemTextColor" format="color" />
        <attr name="cp_fullScreenToolbarColor" format="color" />

        <attr name="cp_countryAutoDetectionPref" format="enum">
            <enum name="SIM_ONLY" value="1" />
            <enum name="NETWORK_ONLY" value="2" />
            <enum name="LOCALE_ONLY" value="3" />
            <enum name="SIM_NETWORK" value="12" />
            <enum name="NETWORK_SIM" value="21" />
            <enum name="SIM_LOCALE" value="13" />
            <enum name="LOCALE_SIM" value="31" />
            <enum name="NETWORK_LOCALE" value="23" />
            <enum name="LOCALE_NETWORK" value="32" />
            <enum name="SIM_NETWORK_LOCALE" value="123" />
            <enum name="SIM_LOCALE_NETWORK" value="132" />
            <enum name="NETWORK_SIM_LOCALE" value="213" />
            <enum name="NETWORK_LOCALE_SIM" value="231" />
            <enum name="LOCALE_SIM_NETWORK" value="312" />
            <enum name="LOCALE_NETWORK_SIM" value="321" />
        </attr>

    </declare-styleable>
</resources>